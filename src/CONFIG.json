{
  "pages": {
    "/": {
      "content": [
        {
          "block_type": "HEADER"
        },
        {
          "block_type": "BANNER_CAROUSEL",
          "source": {
            "path": "banners"
          }
        },
        {
          "block_type": "SEARCH",
          "input": {
            "placeholder": "Поиск..."
          },
          "categories": {
            "source": {
              "path": "categories"
            }
          }
        },
        {
          "block_type": "ITEM_GRID",
          "source": {
            "path": "items"
          },
          "item": {
            "link_to": "/item/:id"
          }
        }
      ]
    },
    "/item/:id": {
      "content": [
        {
          "block_type": "ITEM",
          "source": {
            "path": "items"
          }
        }
      ]
    }
  },
  "logo": { "src": "/logo/logo.png", "h": 50, "w": 150 },
  "baseAPIURL": "/api/v1/"
}
